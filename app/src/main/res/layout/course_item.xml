<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="50dp"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    app:cardCornerRadius="20dp">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:text="TextView" android:layout_marginEnd="20dp"
        android:id="@+id/courseNameItem"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"

        android:textColor="@color/black"
        android:text="TextView" android:layout_marginEnd="20dp"
        android:id="@+id/courseCodeItem"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:text="TextView" android:layout_marginEnd="20dp"
        android:id="@+id/coursePointsItem"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"

        android:textColor="@color/black"
        android:text="TextView" android:layout_marginEnd="28dp"
        android:id="@+id/courseCridetItem"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="TextView"

        android:textColor="@color/black"
        android:layout_marginEnd="24dp"
        android:id="@+id/courseGradeItem"
        app:layout_constraintEnd_toEndOf="parent"/>

</GridLayout>

</androidx.cardview.widget.CardView>