<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView tools:context=".GpaCalculator" android:background="@color/primary_color" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar android:background="@color/dark_primary_color" android:layout_height="60dp" android:layout_width="match_parent">

    <ImageView android:layout_height="40dp"
        android:layout_width="40dp"
        app:tint="@color/primary_color"
        android:layout_marginStart="15dp"
        android:backgroundTint="@color/dark_primary_color"
        android:layout_gravity="start"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:id="@+id/back_iv"/>

    <ImageView android:layout_height="40dp" android:layout_width="40dp" app:tint="@color/primary_color" android:backgroundTint="@color/dark_primary_color" android:layout_gravity="end" android:src="@drawable/img_571207" android:id="@+id/courses" android:layout_marginEnd="15dp"/>

</androidx.appcompat.widget.Toolbar>


    <GridLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:columnCount="2" android:rowCount="2">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_gravity="start"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="CGPA"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Completed Credit Hours"/>

    <EditText android:layout_height="wrap_content" android:layout_width="150dp" android:layout_marginStart="15dp" android:backgroundTint="@color/black" android:layout_gravity="start" android:id="@+id/CGPA" android:textColor="@color/black"/>

    <EditText android:layout_height="wrap_content" android:layout_width="150dp" android:backgroundTint="@color/black" android:layout_gravity="end" android:id="@+id/creditH" android:layout_marginEnd="15dp" android:textColor="@color/black"/>

</GridLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_margin="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView" android:textSize="24sp" android:textColor="@color/black" android:text="Course Code"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginStart="5dp" android:backgroundTint="@color/black" android:id="@+id/course_code" android:textColor="@color/black" android:inputType="textPersonName" android:ems="10"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView2" android:textSize="24sp" android:textColor="@color/black" android:text="Credit Hours" android:textColorHighlight="@color/dark_primary_color"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginStart="5dp" android:backgroundTint="@color/black" android:id="@+id/creditHours" android:textColor="@color/black" android:inputType="number" android:ems="10" android:minHeight="48dp"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_marginBottom="50dp" android:layout_marginTop="20dp">

    <TextView android:layout_height="42dp" android:layout_width="143dp" android:id="@+id/textView3" android:textSize="24sp" android:textColor="@color/black" android:text="Grade" android:textAlignment="center"/>

    <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginStart="5dp" android:backgroundTint="@color/baby_blue" android:id="@+id/Grades" android:padding="5dp" android:foregroundTint="@color/black" android:dropDownSelector="@color/gray"/>

</LinearLayout>


    <GridLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="30dp">

    <Button android:layout_height="wrap_content" android:layout_width="130dp" android:layout_marginStart="30dp" android:backgroundTint="@color/white" android:layout_gravity="start" android:id="@+id/Add" android:text="add course" app:strokeColor="@color/dark_primary_color" android:visibility="visible"/>

    <Button android:layout_height="wrap_content" android:layout_width="130dp" android:backgroundTint="@color/white" android:layout_gravity="end" android:id="@+id/Clear" android:layout_marginEnd="30dp" android:text="clear" app:strokeColor="@color/dark_primary_color"/>

</GridLayout>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:backgroundTint="@color/white" android:layout_gravity="center" android:id="@+id/calculate" android:text="Calculate GPA" android:layout_marginBottom="20dp" app:strokeColor="@color/dark_primary_color"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/courses_view"
            tools:listitem="@layout/course_view"/>

    <GridLayout android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="match_parent" android:layout_width="wrap_content" android:layout_marginStart="30dp" android:layout_gravity="start" android:textSize="24sp" android:textColor="@color/black" android:text="Semester GPA "/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="end" android:id="@+id/gpa_view" android:layout_marginEnd="80dp" android:textSize="24sp" android:textColor="@color/black"/>

</GridLayout>


    <GridLayout android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginStart="30dp" android:layout_gravity="start" android:id="@+id/total" android:textSize="24sp" android:textColor="@color/black" android:text="Total GPA "/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="end" android:id="@+id/total_view" android:layout_marginEnd="80dp" android:textSize="24sp" android:textColor="@color/black"/>

</GridLayout>


</LinearLayout>

</ScrollView>